{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Issuer name",
            "default": "{{ .Release.Name }}"
        },
        "ca": {
            "type":"object",
            "properties": {
                "duration": {
                    "type": "string",
